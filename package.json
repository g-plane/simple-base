{
  "name": "simple-base",
  "version": "0.1.0",
  "description": "A simple base36/base58 converter.",
  "main": "dist/simple-base.js",
  "typings": "./index.d.ts",
  "repository": "https://github.com/g-plane/simple-base",
  "author": "GPlane",
  "license": "Apache-2.0",
  "private": false,
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "lint": "tslint -p ./tsconfig.json"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "devDependencies": {
    "@types/jest": "^21.1.4",
    "jest": "^21.2.1",
    "rollup": "^0.50.0",
    "rollup-plugin-typescript2": "^0.7.0",
    "rollup-plugin-uglify": "^2.0.1",
    "ts-jest": "^21.1.3",
    "tslint": "^5.8.0",
    "typescript": "^2.5.3"
  }
}
