{
  "name": "simple-base",
  "version": "0.2.1",
  "description": "A simple base36/base58 converter.",
  "main": "dist/simple-base.js",
  "typings": "./index.d.ts",
  "repository": "https://github.com/g-plane/simple-base",
  "author": "GPlane",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "test:coverage": "jest --coverage --coverageDirectory ./coverage/",
    "codecov": "codecov",
    "lint": "eslint . -f=beauty --ext=.ts,.js"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "devDependencies": {
    "@gplane/tsconfig": "^1.0.0",
    "@types/jest": "^21.1.4",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "codecov": "^3.0.0",
    "eslint": "^5.15.0",
    "eslint-config-gplane": "^5.1.2",
    "eslint-formatter-beauty": "^3.0.0",
    "jest": "^21.2.1",
    "rollup": "^0.50.0",
    "rollup-plugin-typescript2": "^0.7.0",
    "rollup-plugin-uglify": "^2.0.1",
    "ts-jest": "^21.1.3",
    "typescript": "^3.3.3333"
  }
}
